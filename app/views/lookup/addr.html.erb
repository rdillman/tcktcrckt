<div id="alertmsg">

<%if @message&&@box%>
	<%if @box == "error"%>
		<div class='error'><%=@message%></div>
	<%elsif @box == "warn"%>
		<div class='warning'><%=@message%></div>
	<%elsif @box == 'info'%>
		<div class='info'><%=@message%><%=link_to image_tag "alert.png", :class => "cell",:controller=>"alert", :action=>"create", :method => "get"%></div>
	<%elsif @box == 'error'%>
		<div class='error'><%=@message%></div>
	<%end%>
<%end%> 
</div>

<div class="lookup">
	<%= form_tag("/lookup/addr", :method => "get") do %>
  	<%= text_field_tag(:q, nil, :placeholder => "Search address for cleaning times in San Francisco...", :size => 55, :class => "input1") -%>	
    <%= submit_tag("Search", :class => "user_submit") %>
		<% end %>
</div>

