<div id="lookup_container">

	<div id="lookup_form_container">
		<%= form_tag("/lookup/addr", :method => "get") do %>
  		<%= text_field_tag(:q, nil, :placeholder => I18n.translate('header.search'), :size => 55, :class => "input2") -%>	
    	<%= submit_tag(I18n.translate('header.search_button'), :class => "user_submit", :id => "search_submit") %>
	<% end %>

	</div>
	<div id="alertmsg">
	<%if @message&&@box%>
		<%if @box == "error"%>
			<div class='error'><%=@message%></div>
		<%elsif @box == "warn"%>
			<div class='warning'><%=@message%></div>
		<%elsif @box == 'info'%>
			<div class='info'><%=@message%>		
			
			<%if current_user == nil%> 
			<%=link_to(I18n.translate('header.create_alert'),"../users/sign_up" )%>
			<%elsif current_user.phone_number != current_user.valphone%>
			<%=link_to(I18n.translate('header.create_alert'),validator_enter_path )%>
			<%else %>
			<%=link_to(I18n.translate('header.create_alert'), :class => "user_submit", :id => "alert_submit", :controller=>"alert", :action=>"create", :method => "get", :q=>@usr_qry, :st => I18n.translate('alert_controller.alertmessages.options.night_before')) %>
			<%end%></div>
			
		
			
		<%elsif @box == 'error'%>
			<div class='error'><%=@message%></div>
		<%end%>
	<%end%>
	</div>
	
	<div class="content_box" id="about_box">

	<p> <%= I18n.translate('about_us.intro') %></p>

	<h3><%= I18n.translate('about_us.facts_title') %></h3>

	<h4><%= I18n.translate('about_us.fact_1') %></h4>

	<h4><%= I18n.translate('about_us.fact_2') %></h4>

	<h4><%= I18n.translate('about_us.fact_3') %></h4>

	<p><%= I18n.translate('about_us.closing') %></p>	

	</div>
	
