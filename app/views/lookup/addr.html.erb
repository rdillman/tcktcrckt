<div id="alertmsg">

<%if @message&&@box%>
	<%if @box == "error"%>
		<div class='error'><%=@message%></div>
	<%elsif @box == "warn"%>
		<div class='warning'><%=@message%></div>
	<%elsif @box == 'info'%>
		<div class='info'><%=@message%><%=link_to image_tag "alert.png", :class => "cell",:controller=>"alert", :action=>"create", :method => "get"%></div>
	<%elsif @box == 'error'%>
		<div class='error'><%=@message%></div>
	<%end%>
<%end%> 
</div>

<div class="lookup">

	<%= form_tag("/lookup/addr", :method => "get") do %>
  	<%= text_field_tag(:q, nil, :placeholder => I18n.translate('header.search'), :size => 55, :class => "input1") -%>	

    <%= submit_tag(I18n.translate('header.search_button'), :class => "user_submit") %>
		<% end %>
</div>

<div id="how_to">
	<%= link_to I18n.translate('header.links.how_to'), lookup_how_to_path %>
</div>
