<div id="lookup">

<div class="lookup_container">
	<%= form_tag("/lookup/addr", :method => "get") do %>

  	<%= text_field_tag(:q, nil, :placeholder => I18n.translate('header.search'), :size => 55, :class => "input1") -%>	

    <%= submit_tag(I18n.translate('header.search_button'), :class => "user_submit") %>

		<% end %>
</div>
		
		<div id="alertmsg">
		<%if @message&&@box%>
			<%if @box == "error"%>
				<div class='error'><%=@message%></div>
			<%elsif @box == "warn"%>
				<div class='warning'><%=@message%></div>
			<%elsif @box == 'info'%>
				<div class='info'><%=@message%></div>
				<%=submit_tag(I18n.translate('header.create_alert'), :class => "user_submit", :id => "alert_submit", :controller=>"alert", :action=>"create", :method => "get")%>
			<%elsif @box == 'error'%>
				<div class='error'><%=@message%></div>
			<%end%>
		<%end%> 
		</div>	
	
	
	
	
</div>
