<div id="validation_container">

	<%= form_tag("val", :method => "get") do %>
	<div class="validation_form_container">
	<font size=5><%=label_tag "code", I18n.translate('validator.text_4')%>
	<%= text_field_tag(:code, nil, :size => 27) -%></font>
	<%= submit_tag("Enter", :class => "user_submit", :id=>"validation_submit") %>
	<%end%>
	<br>
	<%= link_to "Get new Validation code",:controller => "validator", :action => "enter", :method => "get", :request_2 => true %>
	</div>

	<div id="validation_message">
	<%if @message&&@box%>
		<%if @box == "error"%>
			<div class='error'><%=@message%></div>
		<%elsif @box == "warn"%>
			<div class='warning'><%=@message%></div>
		<%elsif @box == 'info'%>
			<div class='info'><%=@message%></div>
		<%elsif @box == 'error'%>
			<div class='error'><%=@message%></div>
		<%end%>
	<%else%>
		<%= I18n.translate('validator.text_1')%> <%=@phone%><%= I18n.translate('validator.text_2')%> </br>
	<%= I18n.translate('validator.text_3')%> </br></br>
	<%end%>
	</div>
</div>