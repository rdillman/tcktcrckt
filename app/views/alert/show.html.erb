<%if @message%>
			<font color='red'><%=@message%><br></font>
			<br>
			<hr>
			<br>
<%end%>



<%if @alerts != [] && @alerts != nil%>
<br>
<font size=5><b>Your Current Alerts!</b></font>
<table align="center" cellspacing="10">
  <tr>	
	<th><u>Location</u></th>
	<th><u>CleanTime</u></th>
	<th><u>Alert Send</u></th>
	<th></th>
	<th></th>
  </tr>
	
	<%@alerts.each do |a|%>
	<tr>
		<td><%=a.location%>  </td>
		<td><%=a.clean_time%>  </td>
		<td> <%if a.nb4%>Night Before<%else%>One Hour Before<%end%>  </td>
		<td><%=link_to "delete", :controller => "alert", :action => "kill", :q => a.id, :method => "get" %></td>
		<td><%= link_to "edit", :controller => "alert", :action => "kill", :q => a.id, :method => "get"%></td>
	</tr>
	<%end%>
</table>
<%else%>
	<h1>You have no alerts right now</h1>
<%end%>