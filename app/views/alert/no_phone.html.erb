<%if @message&&@box%>
	<%if @box == "error"%>
		<div class='error'><%=@message%></div>
	<%elsif @box == "warn"%>
		<div class='warning'><%=@message%></div>
	<%elsif @box == 'info'%>
		<div class='info'><%=@message%></div>
	<%elsif @box == 'success'%>
		<div class='success'><%=@message%></div>
	<%end%>
<%end%>

<%= form_tag("/alert/update_phone/", :method => "get") do %>
	<b><font size=5><%=label_tag "num", "Phone Number"%></font></b><br>
	<%= text_field_tag(:num, nil, :placeholder => "415 867 5309", :size => 10) -%><br><br>
	<b><font size=5><%=label_tag "car", "Select Carrier"%></font></b><br>
	<%= select_tag "car", options_for_select([ "AT&T", "T-Mobile", "Verizon", "Sprint" ], "TMobile") %><br>
	<%= submit_tag("Submit", :class => "user_submit") %>
	<br><br>
<%end%>