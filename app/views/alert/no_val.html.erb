<%if @message&&@box%>
	<%if @box == "error"%>
		<div class='error'><%=@message%></div>
	<%elsif @box == "warn"%>
		<div class='warning'><%=@message%></div>
	<%elsif @box == 'info'%>
		<div class='info'><%=@message%></div>
	<%elsif @box == 'success'%>
		<div class='success'><%=@message%></div>
	<%end%>
<%end%>


