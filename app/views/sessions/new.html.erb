<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :remote=>true,:format=>:json) do |f| %>
  <%= f.label :email %><br />
  <%= f.email_field :email, :class => "input3" %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password, :class => "input3" %></p>

  <p><%= f.label :language, "language"%><br />
  <%= f.select :language, [['English', 'en'], ['Espanol', 'es']], :class => "input3"%></p>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
  <% end -%>

  <p><%= f.submit "Sign in", :class => "user_submit" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>

