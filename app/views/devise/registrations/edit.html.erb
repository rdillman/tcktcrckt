<h2><%= I18n.translate('registration.edit')%> <%= resource_name.to_s.humanize %></h2>#can "resource_name.tos.humanize" be called as a string instead?

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :username, I18n.translate('registration.username') %><br />
  <%= f.text_field :username %></p>

  <p><%= f.label :email,  I18n.translate('registration.email') %><br />
  <%= f.email_field :email %></p>

  <p><%= I18n.translate('registration.phone')%></p>
  <%= f.telephone_field :phone_number, :placeholder => "Ex. 4153739434"%></p>

  <p><%= f.label :carrier, I18n.translate('registration.carrier') %><br/>
  <%= f.select :carrier, ["AT&T", "Verizon", "T-Mobile", "Sprint" ] %>  </p>

  <p><%= f.label :current_password, I18n.translate('registration.current_password') %><br />
  <%= f.password_field :current_password, :placeholder => I18n.translate('registration.placeholders.current_password') %></p>

  <p><%= f.label :new_password, I18n.translate('registration.new_password') %><br />
  <%= f.password_field :password, :placeholder => I18n.translate('registration.placeholders.new_password') %></p>

  <p><%= f.label :new_password_confirmation, I18n.translate('registration.confirm_new_password') %><br />
  <%= f.password_field :password_confirmation, :placeholder => I18n.translate('registration.placeholders.confirm_new_password') %></p>

  <p><%= f.label :language, I18n.translate('registration.language')%><br />
  <%= f.select :language, [['English', 'en'], ['Espanol', 'es']]%></p>

  <p><%= f.submit I18n.translate('registration.update') %></p>
<% end %>
<br>
<p><%= I18n.translate('registration.unhappy')%> <%= link_to I18n.translate('registration.cancel'), registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>.</p>

<%= link_to I18n.translate('registration.back'), :back %>
