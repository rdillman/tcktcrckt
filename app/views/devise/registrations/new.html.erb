<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :email %><br />
  <%= f.email_field :email %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></p>

	<p><%= f.label :phone_number, "PHONE NUMBER" %><br />
  <%= f.telephone_field :phone_number, :placeholder => "415 867 5309"%></p>

  <p><%= f.label :carrier, "CARRIER" %><br />
	<%= f.select :carrier, ["AT&T", "Verizon", "T-Mobile", "Sprint"] %>  </p>

  <p><%= f.label :language, "language"%><br />
  <%= f.select :language, [['English', 'en'], ['Espanol', 'es']]%></p>

  <p><%= f.submit "Sign up" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
