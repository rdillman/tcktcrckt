<!DOCTYPE HTML>
<html>
<head>
  <title><%= I18n.translate('header.title')%></title>
  <!-- Grabs the regular stylesheets -->
<link href="/stylesheets/omnisocial.css?1307384404" media="screen" rel="stylesheet" type="text/css" /> 
<link href="/stylesheets/stylesheet.css?1310008841" media="screen" rel="stylesheet" type="text/css" />
  <!-- grabs the mobile stylesheets if needed -->
  


  <!-- Default JavaScript include files -->
  <%= javascript_include_tag :defaults %>

  <%= csrf_meta_tag %>
	<!-- Google analytics -->  
	<script type="text/javascript">

	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-23935529-1']);
	  _gaq.push(['_trackPageview']);

	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();

	</script>
	<!-- end Google analytics -->
</head>
<body>

	<body id="body">
		<!-- <img id="bg" src="/images/2.jpg" /> -->
		<div id="container">			
			<div id="user_nav">
				<div id="logo">
					<%= link_to image_tag("tcktcrckt.png",:border =>0), "/"%>
				</div>
				<div id="user_nav_basic">
					<%= link_to I18n.translate('header.links.how_to'), mapz_how_to_path %>
					
					
					<%if current_user == nil%> 
					
					<%= link_to I18n.translate('header.links.alerts'), "../users/sign_up" %>
					
					<%elsif current_user.phone_number != current_user.valphone%>
					<%= link_to I18n.translate('header.links.alerts'), validator_enter_path %>
					
					<%else %>
					<%= link_to I18n.translate('header.links.alerts'), alert_show_path %>
					
					<%end%>
					
					
					
					<%= link_to I18n.translate('header.links.about_us'), mapz_about_us_path%>
					<%= link_to I18n.translate('header.links.contact'), mapz_contact_us_path %>
				</div>	
				<div id="user_sign">
					<% if user_signed_in? %>
						<%=I18n.translate('header.signed_in_as')%> <%= link_to current_user.username.blank? ? current_user.email : current_user.username, edit_user_registration_path %> <%= I18n.translate('header.not_you')%>
						<%= link_to I18n.translate('header.links.sign_out'), destroy_user_session_path %>
					<% else %>
						<%= link_to I18n.translate('header.links.sign_up'), new_user_registration_path %> <%= I18n.translate('header.links.or')%> 
						<%= link_to I18n.translate('header.links.sign_in'), "/users/sign_in" %>
					<% end %>
			
					<% if mobile_device? %>
				    	<%= link_to I18n.translate('header.links.full_site'), :mobile => 0 %>
				  	<% else %>
				    	<%= link_to I18n.translate('header.links.mobile'), "/?mobile=1" %>
				  	<% end %>
				</div>
			</div>
		</div>
					</div>
				
			<!-- </header> -->
	  
	  <div id="yield_page">
		 	

			<%= yield %>
			
			<div id="paypal">
					<form action="https://www.paypal.com/cgi-bin/webscr" method="post">
					<input type="hidden" name="cmd" value="_s-xclick">
					<input type="hidden" name="hosted_button_id" value="K5ELFZECZQM66">
					<input type="image" src="https://www.paypalobjects.com/WEBSCR-640-20110429-1/en_US/i/btn/btn_donate_SM.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
					<img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
					</form>
			
			<%= link_to "TOS!", "/layouts/tos" %>
			
			</div>
		
		</div>


</body>

</html>
