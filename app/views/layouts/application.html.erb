<!DOCTYPE HTML>
<html>
<head>
  <title>Lose the Vowels, Lose the Tickets!</title>
  <!-- Grabs the stylesheets -->
  <%= stylesheet_link_tag :all %>

  <!-- Default JavaScript include files -->
  <%= javascript_include_tag :defaults %>

  <%= csrf_meta_tag %>
	<!-- Google analytics -->  
	<script type="text/javascript">

	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-23935529-1']);
	  _gaq.push(['_trackPageview']);

	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();

	</script>
	<!-- end Google analytics -->
</head>
<body>

	</head>
	<body id="body">
	<div id="container">
		<body id="body">
			<header id="user_nav">

				<%= link_to image_tag "tcktcrckt.png", :controller => "lookup", :action => "addr" %> |
				<%= link_to "My Alerts", alert_show_path %> |
				<%= link_to "About Us", layouts_about_us_path%> |
				<%= link_to "Contact Us", layouts_contact_us_path %>

					<div id="user_sign">

						<% if user_signed_in? %>
							Signed In as <%= link_to current_user.username.blank? ? current_user.email : current_user.username, edit_user_registration_path %>. Not you?
							<%= link_to "Sign Out", destroy_user_session_path %>
						<% else %>
							<%= link_to "Sign Up", new_user_registration_path %>
						<% end %>
					</div>
			</header>
	  
	  <div id="yield_page">
		 	
		<div id="logo">
		<!-- <%= image_tag "tcktcrckt.png"%> -->
		</div>
			<%= yield %>
		</body>
		<footer id="footer_pay">
			<form id="paypal_form" action="https://www.paypal.com/cgi-bin/webscr" method="post">
			<input type="hidden" name="cmd" value="_s-xclick">
			<input type="hidden" name="hosted_button_id" value="K5ELFZECZQM66">
			<input type="image" src="https://www.paypalobjects.com/WEBSCR-640-20110429-1/en_US/i/btn/btn_donate_SM.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
			<img alt="" border="0" src="https://www.paypalobjects.com/WEBSCR-640-20110429-1/en_US/i/scr/pixel.gif" width="1" height="1">
			</form>
		</footer>	
</html>